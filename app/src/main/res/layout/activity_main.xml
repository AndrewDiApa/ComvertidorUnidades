<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/fondo_aot"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convertidor de unidades"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <EditText
        android:id="@+id/editText_metros"
        android:layout_width="152dp"
        android:layout_height="43dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/equivalencia"
        android:layout_width="152dp"
        android:layout_height="43dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="10dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_metros" />

    <Button
        android:id="@+id/btn_equivalir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:text="Equivalir"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equivalencia" />

    <Button
        android:id="@+id/btn_centimetro"
        android:layout_width="137dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:text="centimetro"
        app:layout_constraintBottom_toBottomOf="@+id/editText_metros"
        app:layout_constraintStart_toEndOf="@+id/editText_metros"
        app:layout_constraintTop_toTopOf="@+id/editText_metros" />

    <Button
        android:id="@+id/btn_milimetro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="milimetro"
        android:paddingHorizontal="25dp"
        android:layout_marginStart="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/equivalencia"
        app:layout_constraintStart_toEndOf="@+id/equivalencia"
        app:layout_constraintTop_toTopOf="@+id/equivalencia" />


</androidx.constraintlayout.widget.ConstraintLayout>